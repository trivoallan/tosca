<% logiciel = @version.logiciel %>
<%= public_link_to _('Homepage') , welcome_url%> >
 <%= public_link_to _('Software') , logiciels_path %> >
  <%= public_link_to logiciel.groupe.name, logiciel_path(logiciel.groupe_id) %> >
   <%= public_link_to logiciel.name, logiciel_path(logiciel) %> >
    <%=  @version.version%>
     <%= link_to_edit(@version) %>

   <h2><%= _('Version of a software')%></h2>

<table class="topbox">
  <tr><td>
   <div class="show" style="min-width: 30em;">
    <p><b><%= _('Software') + ' : '%></b> <%= @version.logiciel.name %></p>
    <p><b><%= _('Version') + ' : '%></b> <%= @version.version %></p>
   </div>

   <p><b><%= pluralize(@version.releases.count, _('release') ) %></b> <%= link_to_new_release(@version.id) %></p>
    <% options = {:no_title => true, :edit => 'release'} %>
   <p>
     <% if @version.releases.size > 0 %>
        <%= show_list(@version.releases, _('release'), options) {|r|
            link_to r.name, release_path(r)
          } %>
     <% end %>
   </p>
  </td>
  </tr>
</table>

<br />

<p>&nbsp;</p>

<%= link_to_edit_and_list(@version) %>
