<% for column in Socle.content_columns %>
<p>
  <b><%= column.human_name %>:</b> <%=h @socle.send(column.name) %>
</p>
<% end %>

<p>
  <b>Machine:</b> <%= link_to_machine(@socle.machine) %>
</p>

<% benchmark 'liste paquet' do %>
<%= show_liste(@paquets, 'paquet') {|p| link_to_paquet(p) } %>
<% end %>

