<%= public_link_to _('Homepage') , welcome_path %> >
 <%= public_link_to _('Software') , logiciels_path %> >
  <%= public_link_to @logiciel.groupe, groupe_path(@logiciel.groupe_id) %> >
   <%= @logiciel %> <%= link_to_edit(@logiciel) %>
<div class="subcolumns">
  <div class="c50l">
    <div class="show">
   <table>
     <tr><td><b><%= _('Name') %></b> </td>
       <td><%= @logiciel.name %>
        <% unless @logiciel.image.blank? %>
          <%= software_logo(@logiciel, :size => :thumb) %>
        <% end %>
      </td></tr>
     <tr><td><b><%= _('Summary') %></b> </td>
         <td><%= @logiciel.resume %></td></tr>
     <tr><td colspan="2">
          <fieldset><legend><%=_('Description')%></legend>
           <%= @logiciel.description %>
          </fieldset></td></tr>
     <% if @ingenieur %>
      <tr><td><b><%= _('Reference') %></b></td>
          <td><%=h @logiciel.referent %></td></tr>
     <% end %>

     <tr><td><b><%= _('Copyright') %></b></td>
         <td><%=h @logiciel.license.name if @logiciel.license %></td></tr>

     <tr><td><b><%= _('Technologies') %></b></td>
         <td><%= @logiciel.competences.collect{|c| c.name}.join(', ') %></td></tr>

     <tr><td><b><%= _('Group') %></b></td>
         <td><%= public_link_to(@logiciel.groupe.name, groupe_path(@logiciel.groupe_id) ) if @logiciel.groupe %></td></tr>

     <tr><td><b><%= _('Links') %></b> <%= link_to_new_urllogiciel(@logiciel.id) %></td>
         <% options = {:no_title => true, :edit => 'urllogiciel'} %>
         <td><%= show_list(@logiciel.urllogiciels, 'url', options) {|u|
             "<a href=\"#{u.valeur.urlize}\" target=\"_blank\">#{u.typeurl.name}</a>"
            } %>
         </td></tr>
   </table>
 </div>
</div>
<div class="c50r">
    <div class="show">
   <table>
     <tr><td colspan="2"><b><%=_('Requests')%></b> <%= link_to_new_request(:logiciel_id => @logiciel.id)%> <br />
        <% options[:edit] = nil %>
        <% options[:public_summarized] = true %>
        <% if @requests.size > 0  %>
         <div class="bloc_scroll">
           <%=show_list(@requests, _('Request'), options) {|d| link_to_request d}%>
         </div>
        <% end %>
     </tr>

     <tr><td><b><%=n_('Version', 'Versions', @logiciel.versions.size)%></b> <%= link_to_new_version(@logiciel) %></td>
       <td>
          <% options[:edit] = 'version' %>
          <%= show_list(@logiciel.versions, _('Version'), options) do |version|
             link_to_version version
          end %>
       </td>
     </tr>

     <tr><td colspan="2"><b><%=_('Contributions')%></b>
         <%= link_to_new_contribution(nil, :logiciel_id => @logiciel.id)%><br />
         <%= public_table_of_contributions(@logiciel.contributions) %> </td>
     </tr>

     <tr><td><b><%=_('Tags')%></b></td>
        <td><%= @logiciel.tag_list %></td>
     </tr>
   </table>
 </div>
 </div>
 </div>

<%= link_to_edit_and_list @logiciel %>
