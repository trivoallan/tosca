
<% if @ingenieur %>

<div class="show">
  <h1><b><%= _('Engineer') %></b></h1><br />

  <p><label for="ingenieur_chef_de_projet"><%= _('Project manager') + ' ?'%></label>
  <%= check_box 'ingenieur', 'chef_de_projet' %></p>

  <p><label for="ingenieur_expert_ossa"><%= _('OSSA expert') + ' ?'%></label>
  <%= check_box 'ingenieur', 'expert_ossa' %></p>

  <div>
   <label for="ingenieur_competences"><%= _('Skills') + ' ?' %></label><br />
   <%= hbtm_check_box( @ingenieur.competences, @competences, 'ingenieur[competence_ids]', :size => 4) %>
  </div>

  <div>
   <label for="ingenieur_contrats"><%= _('Contracts')%></label><br />
   <%= hbtm_check_box( @ingenieur.contrats, @contrats, 'ingenieur[contrat_ids]', :size => 2) %>
  </div>

</div>

<% end %>

